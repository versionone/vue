{
  "private": true,
  "name": "@verdigris/ui",
  "version": "0.0.0-development",
  "author": "Andrew Smith <andrew@andrew.codes>",
  "repository": "https://github.com/andrew-codes/verdigris.git",
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn lerna bootstrap",
    "lint": "yarn lint:eslint",
    "lint:eslint": "eslint --print-config .eslintrc.json | eslint-config-prettier-check && eslint **/*.js",
    "cy:run": "cypress run",
    "test": "start-server-and-test start http://localhost:9000 cy:run",
    "test:ci": "start-server-and-test start http://localhost:9000 cy:run -- --record",
    "start": "lerna run start --scope @verdigris/website",
    "build:website": "lerna run build --scope @verdigris/website",
    "new-comp": "scripts/bin/new-comp.sh",
    "build": "lerna run build"
  },
  "engines": {
    "node": "^8.5.0 || ^10.0.0",
    "yarn": "^1.3.2"
  },
  "workspaces": [
    "build/*",
    "components/*",
    "packages/*",
    "website"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-plugin-dynamic-import-webpack": "^1.0.2",
    "babel-plugin-emotion": "^9.2.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chalk-cli": "^4.0.0",
    "cypress": "^3.0.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "globby": "^8.0.1",
    "lerna": "^2.11.0",
    "prettier": "^1.12.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "semantic-release": "^15.6.3",
    "start-server-and-test": "^1.5.0",
    "yallist": "^3.0.2"
  },
  "dependencies": {
    "emotion-theming": "^9.2.4"
  }
}
